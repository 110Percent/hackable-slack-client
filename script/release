#!/bin/sh

set -xe

app_version=$(cat app/package.json | egrep "^  \"version" | cut -d '"' -f 4)
release=hackable-slack-client-$app_version.zip
echo "app version $app_version"
script/build

echo "Next, go compress in the finder..."
echo
echo
echo aws s3 cp tmp/Hackable\ Slack\ Client.zip s3://dinosaur/hackable-slack-client-$app_version.zip --grants read=uri=http://acs.amazonaws.com/groups/global/AllUsers
